{
    "manifest_version": 3,
    "name": "Judge Bookmark",
    "description": "用來為Judge加上標記資訊的書籤工具",
    "homepage_url": "https://github.com/temmie-950807",
    "version": "0.0.2",
    "author": "temmie",
    "action": {
        "default_icon": "assets/icon.png",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "permissions": [
        "declarativeContent",
        "storage",
        "contextMenus",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "content_scripts": [
        {
        "matches": [
            "https://*/*"
        ],
        "js": [
            "./scripts/main.js"
        ],
        "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "./scripts/background.js"
    },
    "background.service_worker": {
        "persistent": false
    },
    "content_security_policy": {
        "extension_pages": "default-src 'self' cdnjs.cloudflare.com; script-src 'self'; style-src *; font-src *; connect-src https://* data: blob: filesystem:;"
    }    
}